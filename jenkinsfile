pipeline {
    agent any

    stages {

        // ===== FRONTEND BUILD =====
      stage('Build Frontend') {
    steps {
    dir('FullStackProject/supermarket') {
    bat 'npm install --legacy-peer-deps'
    bat 'set "CI=false" && npm run build'
}

    }
}


        // ===== FRONTEND DEPLOY =====
        stage('Deploy Frontend to Tomcat') {
            steps {
                bat '''
                set "TOMCAT_PATH=C:\\Program Files\\Apache Software Foundation\\Tomcat 10.1\\webapps\\supermarketfrontend"
                
                if exist "%TOMCAT_PATH%" (
                    rmdir /S /Q "%TOMCAT_PATH%"
                )
                mkdir "%TOMCAT_PATH%"
                
                xcopy /E /I /Y "FullStackProject-SupermarketManagement-main\\FullStackProject\\supermarket\\build\\*" "%TOMCAT_PATH%\\"
                '''
            }
        }

        // ===== BACKEND BUILD =====
        stage('Build Backend') {
            steps {
                dir('FullStackProject-SupermarketManagement-main/Supermarket') {
                    bat 'mvn clean package -DskipTests'
                }
            }
        }

        // ===== BACKEND DEPLOY =====
        stage('Deploy Backend to Tomcat') {
            steps {
                bat '''
                set "TOMCAT_WEBAPPS=C:\\Program Files\\Apache Software Foundation\\Tomcat 10.1\\webapps"

                if exist "%TOMCAT_WEBAPPS%\\supermarketbackend.war" (
                    del /Q "%TOMCAT_WEBAPPS%\\supermarketbackend.war"
                )
                if exist "%TOMCAT_WEBAPPS%\\supermarketbackend" (
                    rmdir /S /Q "%TOMCAT_WEBAPPS%\\supermarketbackend"
                )

                copy "FullStackProject-SupermarketManagement-main\\Supermarket\\target\\supermarketbackend.war" "%TOMCAT_WEBAPPS%\\"
                '''
            }
        }

    }

    post {
        success {
            echo '✅ Deployment Successful!'
        }
        failure {
            echo '❌ Pipeline Failed.'
        }
    }
}
